page
{
  width:100%;
  height: 100%;
  background: #FAFAFA
 
}
.container
{
  width:750rpx;
}
.nav
{
  width:750rpx;
  height:80rpx;
  display: flex;
  border: 1px solid #E8E8E8;
  background: #E8E8E8;
  position: fixed;
  top:0;
  left:0;
  

}
.tabBarIcon
{
  width:90rpx;
  height:2rpx;
  border-bottom:1px solid #128BFF;
  position: absolute;
  top:78rpx;
  left:80rpx;
  transition: left 0.5s ease;
}
.nav .tab
{
  width:250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: MicrosoftYaHei;
  font-weight: Regular;
  color:#353535;
  font-size: 24rpx;
}
.active
{
  color:#128BFF !important;
}
.main
{
  padding:0  30rpx 0 32rpx;
  background: #FFF;
  margin-top:82rpx;
}
.main .item
{
  width:690rpx;
  border-bottom:1px solid rgba(198, 198, 198, 0.3);
  display: flex;
  justify-content: space-between;
}
.main .item:last-child
{
  border:none;
}
.item .left,.item .right
{
   box-sizing: border-box;
   padding:26rpx 0 22rpx 0;
}
.left .title
{
  font-family: MicrosoftYaHei;
  font-weight: Regular;
  line-height: 1;
  color:#5D5D5D;
  font-size: 28rpx;
}
.left .time
{
  font-family: MicrosoftYaHei;
  font-weight: Regular;
  color:#B2B2B2;
  font-size: 22rpx;
  line-height: 1;
  text-align: left;
  margin-top: 13rpx;
  
}
.right
{
  display: flex;
  align-items: center;
}
.warper
{
  margin-right:8rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.warper .sum
{
  font-family: MicrosoftYaHei;
  font-weight: Regular;
  color:#FF0000;
  font-size: 28rpx;
  line-height: 1;
  text-align: left;
}
.warper .status
{
  font-family: MicrosoftYaHei;
  font-weight: Regular;
  color:#B2B2B2;
  font-size: 22rpx;
  line-height: 1;
  margin-top:15rpx;
  text-align: left;
}
.right .icon
{
  width:20rpx;
  height: 34rpx;
}