

page
{
  width:100%;
  height:100%;
  background: rgba(250, 250, 250, 1);
}
.info
{
  background: rgba(255, 255, 255, 1);
  padding:0 30rpx 0 32rpx;
}
.info .item
{
  display: flex;
  height: 108rpx;
  border-bottom: 2rpx solid rgba(198, 198, 198,.3);
  align-items: center;
}
.font 
{
  font-family: MicrosoftYaHei;
  font-weight: 400;
}
.item .title
{
  font-size: 28rpx;
  color:rgba(53, 53, 53, 1);

}
.item .tips
{
  font-size: 24rpx;
  color:rgba(136, 136, 136, 1);
  margin-left: 10rpx;
}
.item .input
{
  height: 108rpx;
  font-size:24rpx;
  color:rgba(53, 53, 53, 1);
  flex:1;
  text-align: right;
}
.placeholder
{
   font-size: 24rpx;
   color:rgba(136, 136, 136, 1); 
}
.setting
{
  margin-top:50rpx;
  background: rgba(255, 255, 255, 1);
  padding:0 30rpx 0 32rpx;
}
.setting .item
{
  display: flex;
  height: 108rpx;
  border-bottom: 2rpx solid rgba(198, 198, 198,.3);
  align-items: center;
  justify-content: space-between;
}
.delete
{
  font-size: 28rpx;
  color:rgba(255, 0, 0, 1);
}
.btn
{
  width:420rpx;
  height: 80rpx;
  text-align: center;
  margin: 0 auto;
  margin-top:144rpx;
  line-height: 80rpx;
  background:linear-gradient(-90deg,rgba(65,102,255,1),rgba(103,133,255,1));
  border-radius: 40rpx;
  color: #FEFFFF;
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  font-weight: Regular;
  box-shadow:2rpx 6rpx 20rpx rgba(65, 102, 255,0.65);
}