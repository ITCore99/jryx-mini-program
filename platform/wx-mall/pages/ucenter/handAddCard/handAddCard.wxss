
page
{
   background: #FAFAFA;
}
.container
{
  width: 100%;
  
}
.main
{
  padding:0 28rpx 0 32rpx;
  background: #FFFFFF;
}
.main .item
{
  display: flex;
  width: 100%;
  height: 108rpx;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(198, 198, 198, 1);
  background: #FFFFFF;
}
.main .item:last-child
{
  border:none;

}
.item .title
{
  font-family:MicrosoftYaHei;
  font-size: 28rpx;
  font-weight: Regular;
  color:#5D5D5D;
  line-height: 108rpx; 
  text-align: left;
}
.item .input
{
   text-align: right;
   font-family:MicrosoftYaHei;
   font-size: 24rpx;
   font-weight: Regular;
   color:#B2B2B2;
   line-height: 108rpx;
}
.item .inputText
{
  height: 108rpx;
  text-align: right;
  line-height: 108rpx;
}
.btn
{
  width:420rpx;
  height: 80rpx;
  text-align: center;
  margin: 0 auto;
  margin-top:144rpx;
  line-height: 80rpx;
  background:linear-gradient(-90deg,rgba(65,102,255,1),rgba(103,133,255,1));
  border-radius: 40rpx;
  color: #FEFFFF;
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  font-weight: Regular;
  box-shadow:2rpx 6rpx 20rpx rgba(65, 102, 255,0.65)
  
}